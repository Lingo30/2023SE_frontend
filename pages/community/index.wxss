page {
  background-color: #f5f5f5;
}

.column {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  flex-direction: row;
}

.card {
  font-size: large;
  /* 圆角 */
  border-radius: 20rpx;
  /* 边 */
  border: 1rpx solid #E0E3DA;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #E0E3DA;
  background-color: #ffffff;
  margin: 30rpx;
  /* padding使得文字和图片不至于贴着边框 */
  padding: 30rpx;
}

.fab {
  float: right;
  color: #0052D9;
  position: fixed;
  bottom: 200rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12vh;
  margin-right: 5vw;
}