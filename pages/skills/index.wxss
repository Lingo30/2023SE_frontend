/* pages/skills/index.wxss */
/* 1. Header */
.header {
  padding: 40rpx;
  background-color: rgb(30, 72, 189);
  color: #FFFFFF;
}
.header-big {
  font-size: 42rpx;
  font-weight: bold;
}
.header-small {
  padding-top: 10rpx;
  font-size: 30rpx;
}
/* 2. 技能列表 */
.skills-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 30rpx 45rpx 10rpx 45rpx;
}

.skill {
  color: #333333;
  font-size: 24rpx;
  height: 32rpx;
  /* line-height: 32rpx; */
  font-weight: normal;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  background: #f5f5f5;
  border-radius: 38rpx;
  padding: 12rpx 24rpx;
}

.skill-activate {
  color: #f5f5f5;
  font-size: 24rpx;
  line-height: 32rpx;
  font-weight: normal;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  background: #0052D9;
  border-radius: 38rpx;
  padding: 12rpx 24rpx;
}

/* 4. 确认按钮 */
.scroll-view-container {
  height: 85%;
}

.fixed-bottom {
  position: fixed;
  bottom: 10rpx;
  width: 100%;
  height: 15%;
}

.fixed-flex-container {
  position: relative;
}

.button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 10%;
}

.already-container {
  padding: 15rpx 20rpx;
  background-color: #f5f5f5;
}