<view style="text-align: center; color: #b9b9b9" wx:if="{{pageLoading}}">
  <t-loading theme="circular" size="40rpx" text="加载中..." inherit-color />
</view>

<view class="home-page-container">

  <view class="home-page-tabs">
    <t-tabs t-class="t-tabs" t-class-active="tabs-external__active" t-class-item="tabs-external__item" defaultValue="{{0}}" space-evenly="{{false}}" bind:change="tabChangeHandle">
      <t-tab-panel wx:for="{{tabList}}" wx:for-index="index" wx:key="index" label="{{item.text}}" value="{{item.key}}" />
    </t-tabs>
  </view>

  <scroll-view scroll-y="true" style='height:600px' bindscrolltolower="loadMore">
    <block wx:for="{{internlist}}" wx:for-item="item" wx:for-index="index" wx:if="{{current=='项目'}}">
      <intern-card itemData="{{item}}" id="{{index}}" ctx="{{'t_' + current}}" />
    </block>
    <block wx:for="{{proflist}}" wx:for-item="item" wx:for-index="index" wx:if="{{current=='导师'}}">
      <infocard itemData="{{item}}" id="{{index}}" />
    </block>
    <block wx:for="{{momentlist}}" wx:for-item="item" wx:for-index="index" wx:if="{{current=='帖子'}}">
      <moment item="{{item}}" id="{{index}}" bindtap="jump2mDetail" data-id="{{item.momentId}}" />
    </block>
  </scroll-view>

  <t-toast id="t-toast" />
</view>