.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.tab-bar {
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: center;
}

.tab {
  font-size: 36rpx;
  font-weight: bold;
  color: #999999;
  margin-right: 30rpx;
}

.selected {
  color: #FF4500;
}

.scroll-view {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.message {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.name-time {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.time {
  font-size: 28rpx;
  color: #999999;
}

.message-text {
  font-size: 28rpx;
  color: #666666;
}