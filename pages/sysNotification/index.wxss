/* pages/sysNotification/index.wxss */
.header {
  padding: 40rpx;
  background-color: rgb(30, 72, 189);
  color: #FFFFFF;
  height: 4vh;
  display: flex;
  align-items: center;
}

.header-big {
  font-size: 42rpx;
  font-weight: bold;
  margin-left: 14rpx;
}

.note-card {
  display: flex;
  flex-direction: column;
}

.text {
  margin: 15rpx 40rpx 20rpx 40rpx;
  padding: 15rpx 40rpx;
  font-size: 32rpx;
  border-radius: 20rpx;
  border: 3rpx solid #E0E3DA;
  box-shadow: 5rpx 5rpx 5rpx 5rpx #E0E3DA;
  line-height: 1.8em;
}