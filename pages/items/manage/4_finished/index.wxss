/* pages/items/manage/1_recruiting/index.wxss */
/* 1. header */
.header-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  background-color: rgb(30, 72, 189);
  color: #FFFFFF;
}

.left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-weight: bold;
  width: 360rpx;
}

.title {
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.sub {
  font-size: 28rpx;
}

.right {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.label {
  font-size: 24rpx;
  font-weight: bold;
}

.value {
  font-size: 24rpx;
  margin-left: 10rpx;
}

/* 2. 项目详情修改 */
.info {
  padding: 30rpx 60rpx 40rpx 60rpx;
  font-size: 32rpx;
  line-height: 1.5;
}

/* 3. 学生申请管理 */
.sInfo {
  width: 70%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 10rpx 30rpx 24rpx;
  border-radius: 20rpx;
  /* 边 */
  border: 3rpx solid #E0E3DA;
  box-shadow: 5rpx 5rpx 5rpx 5rpx #E0E3DA;
  background-color: #ffffff;
  padding: 10rpx;
}

.sInfoList {
  display: flex;
  flex-direction: column;
}

.sInfoItem {
  display: flex;
  flex-direction: row;
  padding: 6rpx;
  font-size: 30rpx;
}

.sInfoItem .sInfoItem-title {
  font-weight: bold;
}

.boxes {
  margin-bottom: 20rpx;
}

/* 4. 学生评价 */
.no-review-alert {
  font-weight: bold;
  font-size: larger;
  color: #0052d9;
  margin: 24rpx 10% 24rpx 10%;
  text-align: center;
  border-radius: 20rpx;
  /* 边 */
  border: 3rpx solid #E0E3DA;
  box-shadow: 5rpx 5rpx 5rpx 5rpx #E0E3DA;
  background-color: #ffffff;
  padding: 10rpx;
}

.review-container {
  border-radius: 20rpx;
  /* 边 */
  border: 3rpx solid #E0E3DA;
  box-shadow: 5rpx 5rpx 5rpx 5rpx #E0E3DA;
  background-color: #ffffff;
  padding: 10rpx;
  margin: 30rpx 24rpx 30rpx 24rpx;
}

.inner-container {
  display: flex;
  justify-content: end;
  padding: 10rpx 0 10rpx 0;
}

.comment-container {
  align-items: baseline;
}

.star-container {
  align-items: center;
}

.review-title {
  font-size: 30rpx;
  font-weight: bold;
  width: 24%;
  margin-left: 20rpx;
}

.comment {
  font-size: 30rpx;
  width: 70%;
}



/* 5. button */
.button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 10%;
  padding-right: 10%;
  padding-top: 16rpx;
  padding-bottom: 40rpx;
}


.button-container {
  display: flex;
  justify-content: space-between;
  margin: 0 16rpx 16rpx;
  padding-bottom: 10px;
}

button .t-button__content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.white-text {
  color: #0052d9;
}

.gray-text {
  color: #b5c7ff;
}