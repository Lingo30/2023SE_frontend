.mentor-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: rgb(30, 72, 189);
}

.mentor-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.mentor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.mentor-title {
  font-size: 28rpx;
  color: #333333;
}

.mentor-intro {
  font-size: 24rpx;
  color: #666666;
  margin-top: 10rpx;
}

.image {
  height: 100rpx;
  width: fit-content;
}