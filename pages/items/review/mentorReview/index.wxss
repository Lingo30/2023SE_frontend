.rate__transparent {
  background-color: transparent;
  padding-left: 32rpx;
  border: 0;
}

.external-class {
  height: 324rpx;
}


.input {
  /* background-color: gray; */
  padding: 32rpx 40rpx 40rpx 32rpx;
}

.button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 10%;
  padding-right: 10%;
  padding-top: 30rpx;
}