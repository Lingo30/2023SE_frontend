<!-- 5. 导师评价 -->
<view class="reviews-container">
  <Subtitle title="导师评价" icon="thumb-up" />
  <view class="no-review-alert" wx:if="{{!reviewValid}}">导师还没有评论哦~~~</view>
  <view class="review-container" wx:if="{{reviewValid}}">
    <view class="inner-container star-container">
      <view class="review-title">等级评分：</view>
      <t-rate value="{{stars / 2}}" size="20" allowHalf />
    </view>
    <view class="inner-container comment-container">
      <view class="review-title">导师寄语：</view>
      <view class="comment">{{comment}}</view>
    </view>
  </view>
</view>

<!-- 6. 底边栏：Home | 收藏 | 立即沟通 (三个按钮)-->
<view class="button-container">
  <t-button block class="home-button-container" theme="primary" size="large" shape="round" disabled>
    <t-icon class="i" name="tips" size="48rpx" color="rgb(256, 256, 256)" />
    <text class="gray-text">|</text>
    <text class="button-text">项目已圆满结束</text>
  </t-button>
</view>
<t-toast id="t-toast" />