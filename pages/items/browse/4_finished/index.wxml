<!--pages/items/details/index.wxml-->
<!-- 1. header -->
<view class="header-container">
  <view class="left">
    <view class="title">{{iTitle}}</view>
    <view class="sub">{{tName}}</view>
  </view>
  <view class="right">
    <view class="item">
      <view class="label">招收人数：</view>
      <view class="value"> {{iNum}} / {{iCapacity}} </view>
    </view>
    <view class="item">
      <view class="label">持续时间：</view>
      <view class="value">{{iDuration}}</view>
    </view>
    <view class="item">
      <view class="label">科研单位： </view>
    </view>
    <view class="item">
      <view style="font-size: 24rpx;">{{iPlace}}</view>
    </view>
  </view>
</view>
<!-- 2. 导师介绍 -->
<view class="mentor-outer-container">
  <Subtitle title="导师简介" icon="user-avatar" />
  <view class="mentor-flex-container">
    <view class="avatar_">
      <image class="mentor-image" src="{{tAvatarUrl}}" mode="aspectFill"></image>
    </view>
    <view class="mentor-info">
      <view class="mentor-name">{{tName}}</view>
      <view class="mentor-title">{{tPosition}}</view>
      <view class="small-text">{{tInfo}}</view>
    </view>
    <!-- <t-icon name="chevron-right" size="80rpx" data-name="user-avatar" color="rgb(30, 72, 189)" bind:tap="jump2Mentor" /> -->
  </view>
</view>

<!-- 3. 项目详情 -->
<Subtitle title="项目详情" icon="laptop" />
<view class="itemInfo-container">
  <view class="itemInfo-short-container">
    <view class="itemInfo-subTitle">【项目开始时间】</view>
    <text class="itemInfo-short-content">{{iTime}}</text>
  </view>
  <view class="itemInfo-short-container">
    <view class="itemInfo-subTitle">【项目持续时间】</view>
    <text class="itemInfo-short-content">{{iDuration}}</text>
  </view>
  <view class="itemInfo-short-container">
    <view class="itemInfo-subTitle">【项目类型】</view>
    <text class="itemInfo-short-content">{{iType}}</text>
  </view>
  <view class="itemInfo-subTitle itemInfo-last-subTitle">【项目内容】</view>
  <text class="itemInfo-long-content">{{iInfo}}</text>
</view>

