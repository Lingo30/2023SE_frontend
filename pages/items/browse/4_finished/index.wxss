/* pages/items/details/index.wxss */
/* pages/items/components/Head/Head.wxss */
.header-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 26rpx;
  background-color: rgb(30, 72, 189);
  color: #FFFFFF;
}

.left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: -webkit-fill-available;
}

.title {
  width: 420rpx;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.sub {
  font-size: 28rpx;
}

.right {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.label {
  font-size: 24rpx;
  font-weight: bold;
}

.value {
  font-size: 24rpx;
  margin-left: 10rpx;
}

/* 2. mentor-info */

.mentor-flex-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}

.avatar_ {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: rgb(30, 72, 189);
}

.mentor-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.mentor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.mentor-title {
  font-size: 28rpx;
  color: #333333;
}

.small-text {
  font-size: 24rpx;
  color: #666666;
  margin-top: 10rpx;
}

.mentor-image {
  height: 150rpx;
  width: 150rpx;
  background-color: rgb(30, 72, 189);
}

/* 3. itemInfo */

.itemInfo-subTitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-top: 6px;
}

.itemInfo-last-subTitle {
  margin-top: 26rpx;
}

.itemInfo-long-content {
  font-size: 27rpx;
  color: #666666;
  margin-top: 10rpx;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  padding-left: 20rpx;
  padding-right: 26rpx;

}

.itemInfo-short-content {
  font-size: 40rpx;
  font-weight: bold;
  color: #0052d9;
  margin-top: 20rpx;
  padding-bottom: 8rpx;
  padding-left: 16rpx;
}

.itemInfo-short-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-right: 40rpx;

}

.itemInfo-container {
  flex-direction: column;
  justify-content: center;
  display: flex;
  padding-left: 40rpx;
  padding-right: 40rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}

/* 4. members */
.sInfo {
  width: 70%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 10rpx 30rpx 24rpx;
  border-radius: 20rpx;
  /* 边 */
  border: 3rpx solid #E0E3DA;
  box-shadow: 5rpx 5rpx 5rpx 5rpx #E0E3DA;
  background-color: #ffffff;
  padding: 10rpx;
  transform: translateX();
}

.sInfoList {
  display: flex;
  flex-direction: column;
}

.sInfoItem {
  display: flex;
  flex-direction: row;
  padding: 6rpx;
  font-size: 30rpx;
}

.sInfoItem .sInfoItem-title {
  font-weight: bold;
}

/* 5. 导师评价 */

.review-container {
  border-radius: 20rpx;
  /* 边 */
  border: 3rpx solid #E0E3DA;
  box-shadow: 5rpx 5rpx 5rpx 5rpx #E0E3DA;
  background-color: #ffffff;
  padding: 10rpx;
  margin: 30rpx 24rpx 50rpx 24rpx;
  text-align: left;
}

.inner-container {
  display: flex;
  justify-content: end;
  padding: 10rpx 0 10rpx 0;
}

.comment-container {
  align-items: baseline;
}

.star-container {
  align-items: center;
}

.review-title {
  font-size: 30rpx;
  font-weight: bold;
  width: 24%;
  margin-left: 20rpx;
}

.comment {
  font-size: 30rpx;
  width: 70%;
}

/* 6. 按钮 */
.button-container {
  display: flex;
  justify-content: space-between;
  margin: 0 16rpx 16rpx;
  padding-bottom: 10px;
}

.button-container button .t-button__content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.white-text {
  color: #0052d9;
}

.gray-text {
  color: #b5c7ff;
}