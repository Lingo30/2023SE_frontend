/* pages/items/review/mentorReview/index.wxss */
.header {
  padding: 40rpx;
  background-color: rgb(30, 72, 189);
  color: #FFFFFF;
  font-size: 42rpx;
  font-weight: bold;
}

/* 2. mentor-info */
.mentor-flex-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: rgb(30, 72, 189);
}

.mentor-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.mentor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.mentor-title {
  font-size: 28rpx;
  color: #333333;
}

.small-text {
  font-size: 24rpx;
  color: #666666;
  margin-top: 10rpx;
}

.mentor-image {
  height: 150rpx;
  width: 150rpx;
  background-color: rgb(30, 72, 189);
}

.star {
  background-color: #fff;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  margin-top: 32rpx;
  margin-bottom: 24rpx;
}

.desc {
  text-align: center;
  font-size: large;
  margin-top: 24rpx;
  margin-bottom: 40rpx;
}

.desc--active {
  color: #ED7B2F;
  font-weight: 600;
}

/* .rate {
  
} */

.rate__transparent {
  background-color: transparent;
  padding-left: 32rpx;
  border: 0;
}

.external-class {
  height: 324rpx;
}


.input {
  /* background-color: gray; */
  padding: 32rpx 40rpx 40rpx 32rpx;
}

.button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 10%;
  padding-right: 10%;
  padding-top: 30rpx;
}